<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="fab_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="MainBtnStyle">
        <item name="android:background">@drawable/squircle_wide_btn_background</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/wide_white_btn_text_size</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">
            @dimen/wide_white_btn_margin
        </item>
        <item name="android:layout_height">@dimen/wide_white_btn_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="LanguageBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:layout_marginTop">@dimen/margin_title_top</item>
        <item name="android:layout_marginStart">@dimen/margin_title_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/ms_txt_size</item>
    </style>

</resources>